<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/color_primary"
      android:minHeight="@dimen/actionbar_size_ox"
      android:orientation="horizontal">

        <ImageView
          android:id="@+id/closeToolbarButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_margin="@dimen/spacing_8"
          android:src="@drawable/ox_close_button"
          />
        <TextView
          android:id="@+id/titleToolbar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/spacing_2"
          android:layout_gravity="center"
          android:text="@string/ox_scanner_toolbar_title"
          android:textColor="@color/color_accent"
          android:textSize="@dimen/text_21"
          android:textStyle="bold" />

    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.gigigo.orchextra.ui.scanner.OxZBarScannerView
                android:id="@+id/cameraPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <ImageView
                android:id="@+id/orcFrame"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_centerInParent="true"
                android:layout_margin="16dp"
                android:background="@drawable/ox_frame_scanner"
                android:contentDescription="@null"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/orcFrame"
                android:layout_alignRight="@+id/orcFrame"
                android:layout_below="@+id/orcFrame"
                android:layout_marginTop="-8dp"
                android:gravity="end"
                android:src="@drawable/ox_watermark_scanner"/>

        </RelativeLayout>

</LinearLayout>






