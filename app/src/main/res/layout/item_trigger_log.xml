<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="19dp"
    android:paddingRight="35dp"
    android:paddingTop="10dp"
    >
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:paddingRight="15dp"
      >
    <ImageView
        android:id="@+id/trigger_type_iv"
        android:layout_width="33dp"
        android:layout_height="33dp"
        tools:src="@drawable/ic_barcode_log"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/trigger_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#444444"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:text="Barcode"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.8dp"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="2dp"
          android:text="@string/trigger_date"
          android:textColor="@color/secondary_text"
          android:textSize="14sp"
          />
      <TextView
          android:id="@+id/date_type_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/primary_text"
          android:textSize="14sp"
          tools:text="xx:xx"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.8dp"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="2dp"
          android:text="@string/trigger_value"
          android:textColor="@color/secondary_text"
          android:textSize="14sp"
          />
      <TextView
          android:id="@+id/trigger_value_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/primary_text"
          android:textSize="14sp"
          tools:text="j9283301032"
          />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trigger_distance_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.8dp"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="2dp"
          android:text="@string/trigger_distance"
          android:textColor="@color/secondary_text"
          android:textSize="14sp"
          />
      <TextView
          android:id="@+id/trigger_distance_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/primary_text"
          android:textSize="14sp"
          tools:text="Near"
          />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trigger_event_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.8dp"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="2dp"
          android:text="@string/trigger_event"
          android:textColor="@color/secondary_text"
          android:textSize="14sp"
          />
      <TextView
          android:id="@+id/trigger_event_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/primary_text"
          android:textSize="14sp"
          tools:text="Near"
          />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>